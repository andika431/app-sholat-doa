<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgallah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/allah"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat dan Do'a"
        android:layout_below="@id/imgallah"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_niat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Niat Sholat"
        android:backgroundTint="@color/green"
        android:layout_marginTop="199dp"
        android:textAllCaps="false"
        android:layout_marginLeft="80dp"/>
    <Button
        android:id="@+id/btn_gsholat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:textStyle="italic"
        android:text="Gerakan Sholat"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="199dp"/>
    <Button
        android:id="@+id/btn_doa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:text="Bacaan Do'a"
        android:textAllCaps="false"
        android:layout_marginTop="199dp"
        android:layout_marginRight="80dp"/>


</RelativeLayout>